{
  "name": "amplify-astro-adapter-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "tests/fixtures/*"
  ],
  "scripts": {
    "build": "bun run --filter amplify-astro-adapter build",
    "lint": "prettier --check \"packages/**/*.ts\" && eslint \"packages/**/*.ts\"",
    "lint:fix": "prettier --write \"packages/**/*.ts\" && eslint --fix \"packages/**/*.ts\"",
    "typecheck": "bun run --filter amplify-astro-adapter typecheck",
    "test": "intellitester run tests/",
    "test:debug": "intellitester run tests/ --debug",
    "test:headed": "intellitester run tests/ --headed"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.0.0",
    "intellitester": "^0.2.43",
    "prettier": "^3.3.0",
    "typescript-eslint": "^8.53.0"
  },
  "packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a"
}
