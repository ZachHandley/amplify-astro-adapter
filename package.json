{
  "name": "amplify-astro-adapter-monorepo",
  "version": "0.3.0",
  "private": true,
  "description": "AWS Amplify adapter for Astro - Monorepo",
  "scripts": {
    "build": "pnpm --filter amplify-astro-adapter build",
    "lint": "prettier --check \"packages/**/*.ts\" && eslint \"packages/**/*.ts\"",
    "lint:fix": "prettier --write \"packages/**/*.ts\" && eslint --fix \"packages/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0",
    "prettier": "^3.3.0",
    "eslint": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.0.0",
  "pnpm": {
    "onlyBuiltDependencies": ["esbuild", "sharp"]
  }
}
